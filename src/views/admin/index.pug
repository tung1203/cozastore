extends layout.pug

block content
  .page-content-wrapper-inner
          .content-viewport
            .row
              .col-12.py-5
                h4 Dashboard
                p.text-gray Welcome aboard, Allen Clerk
            .row
              .col-md-3.col-sm-6.col-6.equel-grid
                .grid
                  .grid-body.text-gray
                    .d-flex.justify-content-between
                      p 30%
                      p +06.2%
                    p.text-black Traffic
                    .wrapper.w-50.mt-4
                      canvas#stat-line_1(height='45')
              .col-md-3.col-sm-6.col-6.equel-grid
                .grid
                  .grid-body.text-gray
                    .d-flex.justify-content-between
                      p 43%
                      p +15.7%
                    p.text-black Conversion
                    .wrapper.w-50.mt-4
                      canvas#stat-line_2(height='45')
              .col-md-3.col-sm-6.col-6.equel-grid
                .grid
                  .grid-body.text-gray
                    .d-flex.justify-content-between
                      p 23%
                      p +02.7%
                    p.text-black Bounce Rate
                    .wrapper.w-50.mt-4
                      canvas#stat-line_3(height='45')
              .col-md-3.col-sm-6.col-6.equel-grid
                .grid
                  .grid-body.text-gray
                    .d-flex.justify-content-between
                      p 75%
                      p - 53.34%
                    p.text-black Marketing
                    .wrapper.w-50.mt-4
                      canvas#stat-line_4(height='45')
              .col-lg-4.col-md-6.equel-grid
                .grid
                  .grid-body.d-flex.flex-column.h-100
                    .wrapper
                      .d-flex.justify-content-between
                        .split-header
                          img.img-ss.mt-1.mb-1.mr-2(src='/admin/images/social-icons/instagram.svg' alt='instagram')
                          p.card-title Followers Growth
                        .wrapper
                          button.btn.action-btn.btn-xs.component-flat.pr-0(type='button')
                            i.mdi.mdi-access-point.text-muted.mdi-2x
                          button.btn.action-btn.btn-xs.component-flat.pr-0(type='button')
                            i.mdi.mdi-cloud-download-outline.text-muted.mdi-2x
                      .d-flex.align-items-end.pt-2.mb-4
                        h4 16.2K
                        p.ml-2.text-muted New Followers
                    .mt-auto
                      canvas#followers-bar-chart.curved-mode(height='220')
              .col-lg-4.col-md-6.equel-grid
                .grid
                  .grid-body
                    p.card-title Campaign
                    #radial-chart
                    h4.text-center $23,350.00
                    p.text-center.text-muted Used balance this billing cycle
              .col-lg-4.col-md-6.equel-grid
                .grid.table-responsive
                  table.table.table-stretched
                    thead
                      tr
                        th Symbol
                        th Price
                        th Change
                    tbody
                      tr
                        td
                          p.mb-n1.font-weight-medium AAPL
                          small.text-gray Apple Inc.
                        td.font-weight-medium 198.18
                        td.text-danger.font-weight-medium
                          .badge.badge-success -1.39%
                      tr
                        td
                          p.mb-n1.font-weight-medium NKE
                          small.text-gray Nike,Inc.
                        td.font-weight-medium 03.95
                        td.text-danger.font-weight-medium
                          .badge.badge-danger -1.17%
                      tr
                        td
                          p.mb-n1.font-weight-medium NSEI
                          small.text-gray Nifty 50
                        td.font-weight-medium 11,278
                        td.text-danger.font-weight-medium
                          .badge.badge-success -0.24%
                      tr
                        td
                          p.mb-n1.font-weight-medium BA
                          small.text-gray The Boeing Company
                        td.font-weight-medium 354.67
                        td.text-success.font-weight-medium
                          .badge.badge-success +0.15%
                      tr
                        td
                          p.mb-n1.font-weight-medium SBUX
                          small.text-gray Starbucks Corporation
                        td.font-weight-medium 08.42
                        td.text-success.font-weight-medium
                          .badge.badge-success +0.67%
              .col-lg-5.col-md-6.col-sm-12.equel-grid
                .grid
                  .grid-body
                    .split-header
                      p.card-title Available Balance
                      span.btn.action-btn.btn-xs.component-flat(data-toggle='tooltip' data-placement='left' title='Available balance since the last week')
                        i.mdi.mdi-information-outline.text-muted.mdi-2x
                    .d-flex.align-items-end.mt-2
                      h3 26.00453100
                      p.ml-1.font-weight-bold BTC
                    .d-flex.mt-2
                      .wrapper.d-flex.pr-4
                        small.text-success.font-weight-medium.mr-2 USD
                        small.text-gray $103,342.50
                      .wrapper.d-flex
                        small.text-primary.font-weight-medium.mr-2 EUR
                        small.text-gray $91,105.00
                    .d-flex.flex-row.mt-4.mb-4
                      button.btn.btn-outline-light.text-gray.component-flat.w-50.mr-2(type='button') SEND
                      button.btn.btn-primary.w-50.ml-2(type='button') RECEIVE
                    .d-flex.mt-5.mb-3
                      small.mb-0.text-primary Recent Transaction (3)
                    .d-flex.justify-content-between.border-bottom.py-2
                      p.text-black Received Bitcoin
                      p.text-gray +0.00005462 BTC
                    .d-flex.justify-content-between.border-bottom.py-2
                      p.text-black Sent Bitcoin
                      p.text-gray -0.00001446 BTC
                    .d-flex.justify-content-between.pt-2
                      p.text-black Sent Bitcoin
                      p.text-gray -0.00003573 BTC
              .col-lg-7.col-md-12.equel-grid
                .grid.widget-revenue-card
                  .grid-body.d-flex.flex-column.h-100
                    .split-header
                      p.card-title Server Load
                      .content-wrapper.v-centered
                        small.text-muted 2h ago
                        span.btn.action-btn.btn-refresh.btn-xs.component-flat
                          i.mdi.mdi-autorenew.text-muted.mdi-2x
                    .mt-auto
                      canvas#cpu-performance(height='80')
                      h3.font-weight-medium.mt-4 69.05%
                      p.text-gray Storage is getting full
                      .w-50
                        .d-flex.justify-content-between.text-muted.mt-3
                          small Usage
                          small 35.62 GB / 2TB
                        .progress.progress-slim.mt-2
                          .progress-bar.bg-primary(role='progressbar' style='width: 68%' aria-valuenow='68' aria-valuemin='0' aria-valuemax='100')
              .col-md-8.equel-grid
                .grid
                  .grid-body.py-3
                    p.card-title.ml-n1 Order History
                  .table-responsive
                    table.table.table-hover.table-sm
                      thead
                        tr.solid-header
                          th.pl-4(colspan='2') Customer
                          th Order No
                          th Purchased On
                      tbody
                        tr
                          td.pr-0.pl-4
                            img.profile-img.img-sm(src='/admin/images/profile/male/image_4.png' alt='profile image')
                          td.pl-md-0
                            small.text-black.font-weight-medium.d-block Barbara Curtis
                            span.text-gray
                              span.status-indicator.rounded-indicator.small.bg-primary
                              | Account Deactivated
                          td
                            small 8523537435
                          td  Just Now 
                        tr
                          td.pr-0.pl-4
                            img.profile-img.img-sm(src='/admin/images/profile/male/image_3.png' alt='profile image')
                          td.pl-md-0
                            small.text-black.font-weight-medium.d-block Charlie Hawkins
                            span.text-gray
                              span.status-indicator.rounded-indicator.small.bg-success
                              | Email Verified
                          td
                            small 9537537436
                          td  Mar 04, 2018 11:37am 
                        tr
                          td.pr-0.pl-4
                            img.profile-img.img-sm(src='/admin/images/profile/female/image_2.png' alt='profile image')
                          td.pl-md-0
                            small.text-black.font-weight-medium.d-block Nina Bates
                            span.text-gray
                              span.status-indicator.rounded-indicator.small.bg-warning
                              | Payment On Hold
                          td
                            small 7533567437
                          td  Mar 13, 2018 9:41am 
                        tr
                          td.pr-0.pl-4
                            img.profile-img.img-sm(src='/admin/images/profile/male/image_10.png' alt='profile image')
                          td.pl-md-0
                            small.text-black.font-weight-medium.d-block Hester Richards
                            span.text-gray
                              span.status-indicator.rounded-indicator.small.bg-success
                              | Email Verified
                          td
                            small 5673467743
                          td  Feb 21, 2018 8:34am 
                  a.border-top.px-3.py-2.d-block.text-gray(href='#')
                    small.font-weight-medium
                      i.mdi.mdi-chevron-down.mr-2
                      | View All Order History
              .col-md-4.equel-grid
                .grid
                  .grid-body
                    .split-header
                      p.card-title Activity Log
                      .btn-group
                        button.btn.btn-trasnparent.action-btn.btn-xs.component-flat.pr-0(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                          i.mdi.mdi-dots-vertical
                        .dropdown-menu.dropdown-menu-right
                          a.dropdown-item(href='#') Expand View
                          a.dropdown-item(href='#') Edit
                    .vertical-timeline-wrapper
                      .timeline-vertical.dashboard-timeline
                        .activity-log
                          p.log-name Agnes Holt
                          .log-details
                            | Analytics dashboard has been created
                            span.text-primary.ml-1 #Slack
                          small.log-time 8 mins Ago
                        .activity-log
                          p.log-name Ronald Edwards
                          .log-details
                            | Report has been updated 
                            .grouped-images.mt-2
                              img.img-sm(src='/admin/images/profile/male/image_4.png' alt='Profile Image' data-toggle='tooltip' title='Gerald Pierce')
                              img.img-sm(src='/admin/images/profile/male/image_5.png' alt='Profile Image' data-toggle='tooltip' title='Edward Wilson')
                              img.img-sm(src='/admin/images/profile/female/image_6.png' alt='Profile Image' data-toggle='tooltip' title='Billy Williams')
                              img.img-sm(src='/admin/images/profile/male/image_6.png' alt='Profile Image' data-toggle='tooltip' title='Lelia Hampton')
                              span.plus-text.img-sm +3
                          small.log-time 3 Hours Ago
                        .activity-log
                          p.log-name Charlie Newton
                          .log-details
                            | Approved your request 
                            .wrapper.mt-2
                              button.btn.btn-xs.btn-primary(type='button') Approve
                              button.btn.btn-xs.btn-inverse-primary(type='button') Reject
                          small.log-time 2 Hours Ago
                        .activity-log
                          p.log-name Gussie Page
                          .log-details Added new task: Slack home page
                          small.log-time 4 Hours Ago
                        .activity-log
                          p.log-name Ina Mendoza
                          .log-details Added new images
                          small.log-time 8 Hours Ago
                  a.border-top.px-3.py-2.d-block.text-gray(href='#')
                    small.font-weight-medium
                      i.mdi.mdi-chevron-down.mr-2
                      |  View All

