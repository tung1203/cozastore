extends layout.pug

block append head
	link(rel="stylesheet" href="../admin/css/bootstrap-tagsinput.css")
	link(rel="stylesheet" href="../admin/css/style.css")

block content
	.page-content-wrapper-inner
		.viewport-header
			nav(aria-label='breadcrumb')
				ol.breadcrumb.has-arrow
					li.breadcrumb-item
						a(href='#') Dashboard
					li.breadcrumb-item
						a(href='#') Product
					li.breadcrumb-item.active(aria-current='page') Add Product
		.content-viewport
			.row
				.col-lg-12
					.grid
						p.grid-header Add product
						.grid-body
							.item-wrapper
								form(action="/admin/add-product" method="POST" enctype="multipart/form-data")
									.row.mb-3
										.col-md-8.mx-auto
											.form-group.row.showcase_row_area
												.col-md-12
													- if(errors)
														each val in errors
															.alert.alert-danger(role="alert")= val
													- if(success)
														.alert.alert-success(role="alert")= success
											.form-group.row.showcase_row_area
												.col-md-3.showcase_text_area
													label(for='inputType1') Name
												.col-md-9.showcase_content_area
													input#inputType1.form-control(type='text' name="productName" value='')
											.form-group.row.showcase_row_area
												.col-md-3.showcase_text_area
													label(for='inputType1') Price
												.col-md-9.showcase_content_area
													input#inputType4.form-control(type='number' name="price" value='')
											.form-group.row.showcase_row_area
												.col-md-3.showcase_text_area
													label(for='inputType9') Description
												.col-md-9.showcase_content_area
													textarea#inputType9.form-control(cols='12' name="description" rows='5')
											.form-group.row.showcase_row_area
												.col-md-3.showcase_text_area
													label(for='size') Size
												.col-md-9.showcase_content_area
													input#size(type="text" value="" name="sizes" data-role="tagsinput")
											.form-group.row.showcase_row_area
												.col-md-3.showcase_text_area
													label(for='color') Color
												.col-md-9.showcase_content_area
													input#color(type="text" value="" name="colors" data-role="tagsinput")
											.form-group.row.showcase_row_area
												.col-md-3.showcase_text_area
													label(for='quantity') Quantity
												.col-md-9.showcase_content_area
													input#quantity.form-control(type='number' name="quantity" value='')
											.form-group.row.showcase_row_area
												.col-md-3.showcase_text_area
													label(for='quantity') Weight
												.col-md-9.showcase_content_area
													input#quantity.form-control(type='number' name="weight" value='')
											.form-group.row.showcase_row_area
												.col-md-3.showcase_text_area
													label(for='quantity') Dimensions
												.col-md-3.showcase_content_area
													input#quantity.form-control(type='number' name="length" value='')
												.col-md-3.showcase_content_area
													input#quantity.form-control(type='number' name="width" value='')
												.col-md-3.showcase_content_area
													input#quantity.form-control(type='number' name="height" value='')
											.form-group.row.showcase_row_area
												.col-md-3.showcase_text_area
													label(for='quantity') Materials
												.col-md-9.showcase_content_area
													input#quantity.form-control(type='text' name="materials" value='')
											.form-group.row.showcase_row_area
												.col-md-3.showcase_text_area
													label(for='quantity') Image
												.col-md-9.showcase_content_area
													input#upload-image-admin.form-control(type='file' name="images" multiple)
											.form-group.row.showcase_row_area
												.col-md-12.text-center.mt-3
													button.btn.btn-success(type="submit") Submit

block append footerjs
	script(src='../admin/vendors/js/core.js')
	script(src='../admin/vendors/js/vendor.addons.js')
	// endinject
	// Vendor Js For This Page Ends
	// Vendor Js For This Page Ends
	// build:js
	script(src='../admin/js/template.js')
	script(src='../admin/js/bootstrap-tagsinput.js')