nav.t-header
      .t-header-brand-wrapper
        a(href='index.html')
          img.logo(src='../admin/images/logo.svg' alt='')
          img.logo-mini(src='../admin/images/logo_mini.svg' alt='')
      .t-header-content-wrapper
        .t-header-content
          button.t-header-toggler.t-header-mobile-toggler.d-block.d-lg-none
            i.mdi.mdi-menu
          form.t-header-search-box(action='#')
            .input-group
              input#inlineFormInputGroup.form-control(type='text' placeholder='Search' autocomplete='off')
              button.btn.btn-primary(type='submit')
                i.mdi.mdi-arrow-right-thick
          ul.nav.ml-auto
            li.nav-item.dropdown
              a#notificationDropdown.nav-link(href='#' data-toggle='dropdown' aria-expanded='false')
                i.mdi.mdi-bell-outline.mdi-1x
              .dropdown-menu.navbar-dropdown.dropdown-menu-right(aria-labelledby='notificationDropdown')
                .dropdown-header
                  h6.dropdown-title Notifications
                  p.dropdown-title-text You have 4 unread notification
                .dropdown-body
                  .dropdown-list
                    .icon-wrapper.rounded-circle.bg-inverse-primary.text-primary
                      i.mdi.mdi-alert
                    .content-wrapper
                      small.name Storage Full
                      small.content-text Server storage almost full
                  .dropdown-list
                    .icon-wrapper.rounded-circle.bg-inverse-success.text-success
                      i.mdi.mdi-cloud-upload
                    .content-wrapper
                      small.name Upload Completed
                      small.content-text 3 Files uploded successfully
                  .dropdown-list
                    .icon-wrapper.rounded-circle.bg-inverse-warning.text-warning
                      i.mdi.mdi-security
                    .content-wrapper
                      small.name Authentication Required
                      small.content-text Please verify your password to continue using cloud services
                .dropdown-footer
                  a(href='#') View All
            li.nav-item.dropdown
              a#messageDropdown.nav-link(href='#' data-toggle='dropdown' aria-expanded='false')
                i.mdi.mdi-message-outline.mdi-1x
                span.notification-indicator.notification-indicator-primary.notification-indicator-ripple
              .dropdown-menu.navbar-dropdown.dropdown-menu-right(aria-labelledby='messageDropdown')
                .dropdown-header
                  h6.dropdown-title Messages
                  p.dropdown-title-text You have 4 unread messages
                .dropdown-body
                  .dropdown-list
                    .image-wrapper
                      img.profile-img(src='../admin/images/profile/male/image_1.png' alt='profile image')
                      .status-indicator.rounded-indicator.bg-success
                    .content-wrapper
                      small.name Clifford Gordon
                      small.content-text Lorem ipsum dolor sit amet.
                  .dropdown-list
                    .image-wrapper
                      img.profile-img(src='../admin/images/profile/female/image_2.png' alt='profile image')
                      .status-indicator.rounded-indicator.bg-success
                    .content-wrapper
                      small.name Rachel Doyle
                      small.content-text Lorem ipsum dolor sit amet.
                  .dropdown-list
                    .image-wrapper
                      img.profile-img(src='../admin/images/profile/male/image_3.png' alt='profile image')
                      .status-indicator.rounded-indicator.bg-warning
                    .content-wrapper
                      small.name Lewis Guzman
                      small.content-text Lorem ipsum dolor sit amet.
                .dropdown-footer
                  a(href='#') View All
            li.nav-item.dropdown
              a#appsDropdown.nav-link(href='#' data-toggle='dropdown' aria-expanded='false')
                i.mdi.mdi-apps.mdi-1x
              .dropdown-menu.navbar-dropdown.dropdown-menu-right(aria-labelledby='appsDropdown')
                .dropdown-header
                  h6.dropdown-title Apps
                  p.dropdown-title-text.mt-2 Authentication required for 3 apps
                .dropdown-body.border-top.pt-0
                  a.dropdown-grid
                    i.grid-icon.mdi.mdi-jira.mdi-2x
                    span.grid-tittle Jira
                  a.dropdown-grid
                    i.grid-icon.mdi.mdi-trello.mdi-2x
                    span.grid-tittle Trello
                  a.dropdown-grid
                    i.grid-icon.mdi.mdi-artstation.mdi-2x
                    span.grid-tittle Artstation
                  a.dropdown-grid
                    i.grid-icon.mdi.mdi-bitbucket.mdi-2x
                    span.grid-tittle Bitbucket
                .dropdown-footer
                  a(href='#') View All